<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html id="top">
<head>
    {% block admin_header_head %}
        <title>{{ translate({ ident: "NAVIGATION_TITLE" }) }}</title>
        <link rel="stylesheet" href="{{ oViewConf.getResourceUrl() }}nav.css">
        <link rel="stylesheet" href="{{ oViewConf.getResourceUrl() }}colors_{{ oViewConf.getEdition()|lower }}.css">
        <meta http-equiv="Content-Type" content="text/html; charset={{ charset }}">
    {% endblock %}
</head>
<body>
    {% set oConfig = oViewConf.getConfig() %}
    <ul>
      {% block admin_header_links %}
          <li class="act">
              <a href="{{ oViewConf.getSelfLink()|raw }}&cl=navigation&amp;item=home.tpl" id="homelink" target="basefrm" class="rc"><b>{{ translate({ ident: "NAVIGATION_HOME" }) }}</b></a>
          </li>
          <li class="sep">
              <a href="{{ oConfig.getShopURL() }}" id="shopfrontlink" target="_blank" class="rc"><b>{{ translate({ ident: "NAVIGATION_SHOPFRONT" }) }}</b></a>
          </li>
          <li class="sep">
              <a href="{{ oViewConf.getSelfLink()|raw }}&cl=navigation&amp;fnc=logout" id="logoutlink" target="_parent" class="rc"><b>{{ translate({ ident: "NAVIGATION_LOGOUT" }) }}</b></a>
          </li>
      {% endblock %}
    </ul>

    <div class="version">
        <b>
            {{ oView.getShopFullEdition() }}
            {{ oView.getShopVersion() }}
        </b>
    </div>

</body>
</html>