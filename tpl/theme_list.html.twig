{% include "headitem.html.twig" with {title: "GENERAL_ADMIN_TITLE"|translate, box: "list"} %}

{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}

<script type="text/javascript">
<!--
window.onload = function ()
{
    top.reloadEditFrame();
    {% if updatelist == 1 %}
        top.oxid.admin.updateList('{{ oxid }}');
    {% endif %}
}
//-->
</script>


<div id="liste">

<form name="search" id="search" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cl" value="theme_list">
    <input type="hidden" name="lstrt" value="{{ lstrt }}">
    <input type="hidden" name="sort" value="{{ sort }}">
    <input type="hidden" name="actedit" value="{{ actedit }}">
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="fnc" value="">
    <input type="hidden" name="language" value="{{ actlang }}">
    <input type="hidden" name="editlanguage" value="{{ actlang }}">

<table cellspacing="0" cellpadding="0" border="0" width="100%">
<colgroup>
    {% block admin_theme_list_colgroup %}
        <col width="3%">
        <col width="98%">
    {% endblock %}
</colgroup>
<tr class="listitem">
    {% block admin_theme_list_filter %}
        <td valign="top" class="listfilter first" height="20">
            <div class="r1"><div class="b1">&nbsp;</div></div>
        </td>
        <td valign="top" class="listfilter" height="20">
            <div class="r1"><div class="b1">&nbsp;</div></div>
        </td>
    {% endblock %}
</tr>
<tr>
    {% block admin_theme_list_sorting %}
        <td class="listheader first" height="15">
            <b><a href="Javascript:document.search.sort.value='oxtitle';document.search.submit();" class="listheader">{{ translate({ ident: "GENERAL_ACTIVE" }) }}</a></b>
        </td>
        <td class="listheader" height="15">
            <b><a href="Javascript:document.search.sort.value='oxtitle';document.search.submit();" class="listheader">{{ translate({ ident: "GENERAL_NAME" }) }}</a></b>
        </td>
    {% endblock %}
</tr>
{% for listitem in mylist %}
<tr id="row.{% set defaultCounter = ( defaultCounter | default(0) ) + 1 %}">
    {% block admin_theme_list_item %}
        {% set zebra = smarty_cycle(["listitem", "listitem2"]) %}
        {% if listitem.getInfo('id') == oxid %}
            {% set zebra = "listitem4" %}
        {% endif %}
        <td valign="top" class="{{ zebra }}{% if listitem.getInfo('active') %} active{% endif %}" height="15">
            <div class="listitemfloating">
                <a href="Javascript:top.oxid.admin.editThis('{{ listitem.getInfo('id') }}');">&nbsp;</a></div></td>
            </div>
        </td>
        <td valign="top" class="{{ zebra }}" height="15">
            <div class="listitemfloating">
                <a href="Javascript:top.oxid.admin.editThis('{{ listitem.getInfo('id') }}');">{{ listitem.getInfo('title') }}</a>
            </div>
        </td>
    {% endblock %}
</tr>
{% endfor %}
{% include "pagenavisnippet.html.twig" with {colspan: "5"} %}
</table>
</form>
</div>

{% include "pagetabsnippet.html.twig" %}

<script type="text/javascript">
if (parent.parent)
{   parent.parent.sShopTitle   = "{{ actshopobj.oxshops__oxname.getRawValue()|addslashes }}";
    parent.parent.sMenuItem    = "{{ translate({ ident: "mxextensions" }) }}";
    parent.parent.sMenuSubItem = "{{ translate({ ident: "mxtheme" }) }}";
    parent.parent.sWorkArea    = "{{ _act }}";
    parent.parent.setTitle();
}
</script>
</body>
</html>

