{% include "headitem.html.twig" with {title: "GENERAL_ADMIN_TITLE"|translate} %}

{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}

<form name="transfer" id="transfer" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="cl" value="voucherserie_groups">
</form>

{% block admin_voucherserie_relations %}
    {% if oxid != "-1" %}
        <table width="100%">
            <colgroup span="3" width="33%">
            <tr>
                <td>
                    {% block admin_voucherserie_groups_form %}
                        <form name="myedit" id="myedit" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
                            {{ oViewConf.getHiddenSid()|raw }}
                            <input type="hidden" name="cl" value="voucherserie_groups">
                            <input type="hidden" name="fnc" value="">
                            <input type="hidden" name="oxid" value="{{ oxid }}">
                            <input type="hidden" name="editval[oxuser__oxid]" value="{{ oxid }}">
                            <input {{ readonly }} type="button" value="{{ translate({ ident: "GENERAL_ASSIGNGROUPS" }) }}" class="edittext" onclick="JavaScript:showDialog('&cl=voucherserie_groups&aoc=1&oxid={{ oxid }}');">
                        </form>
                    {% endblock %}
                </td>
                <td>
                    {% block admin_voucherserie_categories_form %}
                        <form name="myedit" id="myedit" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
                            {{ oViewConf.getHiddenSid()|raw }}
                            <input type="hidden" name="cl" value="discount_articles">
                            <input type="hidden" name="fnc" value="">
                            <input type="hidden" name="oxid" value="{{ oxid }}">
                            <input type="hidden" name="editval[discount__oxid]" value="{{ oxid }}">
                            <input {{ readonly }} type="button" value="{{ translate({ ident: "GENERAL_ASSIGNCATEGORIES" }) }}" class="edittext" onclick="JavaScript:showDialog('&cl=discount_articles&aoc=2&oxid={{ oxid }}');">
                        </form>
                    {% endblock %}
                </td>
                <td>
                    {% block admin_voucherserie_articles_form %}
                        <form name="myedit" id="myedit" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
                            {{ oViewConf.getHiddenSid()|raw }}
                            <input type="hidden" name="cl" value="discount_articles">
                            <input type="hidden" name="fnc" value="">
                            <input type="hidden" name="oxid" value="{{ oxid }}">
                            <input type="hidden" name="editval[discount__oxid]" value="{{ oxid }}">
                            <input {{ readonly }} type="button" value="{{ translate({ ident: "GENERAL_ASSIGNARTICLES" }) }}" class="edittext" onclick="JavaScript:showDialog('&cl=discount_articles&aoc=1&oxid={{ oxid }}');">
                        </form>
                    {% endblock %}
                </td>
            </tr>
        </table>
    {% endif %}
{% endblock %}

