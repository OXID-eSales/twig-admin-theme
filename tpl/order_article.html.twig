{% set oCurr = edit.getOrderCurrency() %}

<form name="DeleteThisArticle" id="DeleteThisArticle" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cur" value="{{ oCurr.id }}">
